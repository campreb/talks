//= require reset

$article-width: 600px;
$aside-width: 200px;
$gutter: 80px;
$ruby-red: #CA1D00;

body {
  background: white;
  color: black;
  font: 14pt/1.6em "proxima-nova", sans-serif;
  margin: 2em auto;
  width: $article-width + ($aside-width + $gutter) * 2;
  -webkit-font-smoothing: antialias;
}

strong {
  font-weight: bold;
}

em {
  font-style: italic;
}

p {
  margin-bottom: 1em;
}

a {
  color: $ruby-red;
  text-decoration: none;
  
  &:hover {
    border-bottom: 2px solid;
  }
}

ul {
  list-style-type: square;
  margin: 1em 0 1em 2em;
}

h1, h2 {
  line-height: 1.2em;
  font-weight: 600;
  font-family: "freight-sans-pro", sans-serif;
}

h1 {
  font-size: 2em;
  color: $ruby-red;
}

h2 {
  font-size: 1.6em;
}

aside {
  font-weight: 600;
  font-family: "freight-sans-pro", sans-serif;
  float: left;
  width: 200px;
  
  .logo {
    color: black;
    display: block;
    font-size: 1.6em;
    text-align: center;
    
    img {
      margin-bottom: 0.5em;
    }

    &:hover {
      border-style: none;
    }
  }
  
  nav {
    margin: 1em 0;
  
    a {
      display: block;
      float: left;
      clear: left;
      margin: 0.5em;
      color:  #CA1D00;
      border-bottom: 2px solid #eee;
    }
  }
}

article {
  float: right;
  margin: 2em ($aside-width + $gutter) 2em 0;
  width: $article-width;
}

.author {
  .photo {
    float: right;
    border-radius: 150px;
  }
}

.meta {
  color: #999;
  font-size: 0.9em;
}

pre {
  background: #eee;
  font-family: Monaco, monospace;
  padding: 0.5em 1em;
  margin: 1em 0;
}

.talk-overview {
  margin-bottom: 2em;
}

.talk {
  .meta {
    margin-bottom: 1em;
  }
}

